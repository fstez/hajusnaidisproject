{
    "swagger": "2.0",
    "info": {
        "title": "Games API",
        "version": "1.0.0",
        "description": "This is a Swagger UI for our Games API.\n\n### Error handling\nErrors use HTTP 400-599 with body:\n```\n{ \"error\": \"Cleartext explanation of the error that occurred\" }\n```"
    },
    "host": "localhost:8080",
    "schemes": [
        "http"
    ],
    "basePath": "/",
    "produces": [
        "application/json"
    ],
    "paths": {
        "/games": {
            "get": {
                "summary": "List games",
                "description": "Returns an array of game names.",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "example": "Minecraft"
                            }
                        }
                    }
                }
            }
        }
    }
}